doctype html
html
    head
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1")
        title= title || "AtriumScreen"

        //-Bootstrap
        link(href="/public/as/css/site.min.css" rel="stylesheet")
        each style in styles
            link(href=style rel="stylesheet")

    body
        //- Start some visual goodness!
        nav.navbar.navbar-default(role="navigation")
            div.container-fluid
                div.navbar-header
                    button.navbar-toggle(type="button" data-toggle="collapse" data-target="#nav-buttons")
                span.navbar-brand
                    a(href="/as") AtriumScreen

                div.collapse.navbar-collapse#nav-buttons
                    ul.nav.navbar-nav
                        li
                            a#refresh Refresh Screens
                        each link in nav
                            li
                                a(href="/as/" + nav)=nav

        != content

        script.
            jwt = "#{jwt}";
        script(src="/public/as/js/jquery-1.11.0.min.js")
        script(src="/public/as/js/bootstrap-3.1.0.min.js")
        script(src="/socket.io/socket.io.js")
        script(src="/public/as/js/atriumscreen-admin.js")

        each script in scripts
            script(src=script)

